{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "app/**/*",
    "components/**/*",
    "lib/**/*",
    "hooks/**/*",
    "utils/**/*",
    "types/**/*"
  ],
  "exclude": ["node_modules", ".next", "dist", "package.json", "public"]
}
