{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "es2022",
    "allowJs": true,
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
